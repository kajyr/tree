{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["./src", "./test/setup.ts"]
}
